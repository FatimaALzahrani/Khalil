<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimlartyPage"
    android:clipToOutline="true"
    android:background="@drawable/content2"
    android:orientation="vertical"
    >
    <ImageView
        android:src="@drawable/head2"
        android:layout_width="56dp"
        android:layout_height="43.47dp"
        android:viewportWidth="56"
        android:viewportHeight="43.47"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FBF9EF"
        android:shadowColor="#40000000"
        android:gravity="center_horizontal|top"
        android:alpha="0.9"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/jomhuria"
        android:text="تم العثور على  آية متشابهة!"
        android:textSize="45sp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </FrameLayout>

</LinearLayout>