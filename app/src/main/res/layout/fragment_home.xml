<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rectangle_9"
            android:layout_width="345dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="80dp"
            android:background="@drawable/rectangle_9"
            android:elevation="15dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/qurantasbee"
                android:layout_width="202.17dp"
                android:layout_height="202.17dp"
                android:layout_marginLeft="-20dp"
                />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:fontFamily="@font/reemkufi"
            android:gravity="right"
            android:text="ستظلُ تائهًا في حياتك \nحتى تتخذ من القرآن خليلًا"
            android:textAppearance="@style/home" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.9"
        android:fontFamily="@font/jomhuria"
        android:gravity="right|top"
        android:text="مقياس التقدم"
        android:textColor="#522170"
        android:layout_marginStart="20dp"
        android:textAppearance="@style/some_id" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:max="100"
        android:progress="46"
        style="?android:attr/progressBarStyleHorizontal"/>
    <View
        android:layout_margin="20dp"
        android:id="@+id/content_3"
        android:layout_width="345dp"
        android:layout_height="74dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/count3"
        />

</LinearLayout>
</FrameLayout>
